<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="LinkDeviceView" parent="AdwBin">
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <property name="halign">center</property>
        <property name="valign">center</property>
        <property name="spacing">24</property>
        <property name="margin-start">24</property>
        <property name="margin-end">24</property>
        <property name="margin-top">24</property>
        <property name="margin-bottom">24</property>
        <child>
          <object class="GtkLabel">
            <property name="label" translatable="yes">Link Device</property>
            <style>
              <class name="title-1"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkOverlay">
            <child>
              <object class="GtkPicture" id="qr_code_image">
                <property name="content-fit">contain</property>
                <property name="width-request">250</property>
                <property name="height-request">250</property>
              </object>
            </child>
            <child type="overlay">
              <object class="GtkSpinner" id="spinner">
                <property name="halign">center</property>
                <property name="valign">center</property>
                <property name="width-request">48</property>
                <property name="height-request">48</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="status_label">
            <property name="label" translatable="yes">Scan this QR code with Signal on your phone</property>
            <property name="wrap">true</property>
            <property name="justify">center</property>
            <property name="max-width-chars">40</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="refresh_button">
            <property name="label" translatable="yes">Refresh QR Code</property>
            <property name="halign">center</property>
            <signal name="clicked" handler="on_refresh_clicked"/>
            <style>
              <class name="pill"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
