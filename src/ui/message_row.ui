<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="libadwaita" version="1.0"/>
  <template class="MessageRow" parent="GtkBox">
    <property name="orientation">horizontal</property>
    <property name="spacing">8</property>
    <property name="margin-start">12</property>
    <property name="margin-end">12</property>
    <property name="margin-top">4</property>
    <property name="margin-bottom">4</property>
    <!-- Avatar for incoming messages -->
    <child>
      <object class="AdwAvatar" id="avatar">
        <property name="size">32</property>
        <property name="visible">false</property>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="content_box">
        <property name="orientation">vertical</property>
        <property name="spacing">4</property>
        <property name="hexpand">true</property>
        <!-- Sender label for group chats -->
        <child>
          <object class="GtkLabel" id="sender_label">
            <property name="halign">start</property>
            <property name="ellipsize">end</property>
            <property name="visible">false</property>
            <style>
              <class name="caption"/>
              <class name="dim-label"/>
            </style>
          </object>
        </child>
        <!-- Quote/Reply preview box -->
        <child>
          <object class="GtkBox" id="quote_box">
            <property name="orientation">vertical</property>
            <property name="spacing">2</property>
            <property name="visible">false</property>
            <property name="margin-bottom">4</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">8</property>
                <child>
                  <object class="GtkBox" id="quote_accent">
                    <property name="width-request">3</property>
                    <style>
                      <class name="accent"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkBox">
                    <property name="orientation">vertical</property>
                    <property name="spacing">2</property>
                    <child>
                      <object class="GtkLabel" id="quote_sender_label">
                        <property name="halign">start</property>
                        <property name="ellipsize">end</property>
                        <style>
                          <class name="caption"/>
                          <class name="accent"/>
                        </style>
                      </object>
                    </child>
                    <child>
                      <object class="GtkLabel" id="quote_content_label">
                        <property name="halign">start</property>
                        <property name="ellipsize">end</property>
                        <property name="max-width-chars">40</property>
                        <style>
                          <class name="caption"/>
                          <class name="dim-label"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
              </object>
            </child>
            <style>
              <class name="quote-preview"/>
            </style>
          </object>
        </child>
        <!-- Main message bubble -->
        <child>
          <object class="GtkBox" id="bubble">
            <property name="orientation">vertical</property>
            <property name="spacing">4</property>
            <!-- Message content -->
            <child>
              <object class="GtkLabel" id="message_label">
                <property name="halign">start</property>
                <property name="wrap">true</property>
                <property name="wrap-mode">word-char</property>
                <property name="selectable">true</property>
                <property name="max-width-chars">50</property>
              </object>
            </child>
            <!-- Disappearing message indicator -->
            <child>
              <object class="GtkBox" id="expiry_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">4</property>
                <property name="visible">false</property>
                <property name="halign">start</property>
                <child>
                  <object class="GtkImage" id="expiry_icon">
                    <property name="icon-name">hourglass-symbolic</property>
                    <property name="pixel-size">12</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="expiry_label">
                    <style>
                      <class name="caption"/>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <!-- Time and status row -->
            <child>
              <object class="GtkBox" id="meta_box">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <property name="halign">end</property>
                <child>
                  <object class="GtkLabel" id="time_label">
                    <style>
                      <class name="caption"/>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
                <!-- Read receipt status icon -->
                <child>
                  <object class="GtkImage" id="status_icon">
                    <property name="pixel-size">14</property>
                    <property name="visible">false</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <style>
              <class name="card"/>
              <class name="message-bubble"/>
            </style>
          </object>
        </child>
        <!-- Reactions display -->
        <child>
          <object class="GtkFlowBox" id="reactions_box">
            <property name="visible">false</property>
            <property name="selection-mode">none</property>
            <property name="max-children-per-line">6</property>
            <property name="min-children-per-line">1</property>
            <property name="homogeneous">false</property>
            <property name="column-spacing">4</property>
            <property name="row-spacing">4</property>
            <property name="halign">start</property>
            <property name="margin-top">4</property>
            <style>
              <class name="reactions"/>
            </style>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
