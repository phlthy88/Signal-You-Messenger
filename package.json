{
  "name": "signal-you-messenger",
  "productName": "Signal You Messenger",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Secure messaging application with AI features",
  "author": "Signal You Team",
  "license": "MIT",
  "main": "electron/main.js",
  "homepage": "https://github.com/phlthy88/Signal-You-Messenger",
  "repository": {
    "type": "git",
    "url": "https://github.com/phlthy88/Signal-You-Messenger.git"
  },
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron:dev\"",
    "build": "ELECTRON=true vite build",
    "build:web": "vite build",
    "preview": "vite preview",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:build:linux": "npm run build && electron-builder --linux",
    "electron:build:deb": "npm run build && electron-builder --linux deb",
    "electron:build:flatpak": "npm run build && electron-builder --linux flatpak",
    "electron:build:appimage": "npm run build && electron-builder --linux AppImage",
    "electron:build:rpm": "npm run build && electron-builder --linux rpm",
    "electron:build:mac": "npm run build && electron-builder --mac",
    "electron:build:win": "npm run build && electron-builder --win",
    "electron:build:all": "npm run build && electron-builder -mwl",
    "flatpak:build": "npm run build && ./scripts/build-flatpak.sh",
    "deb:build": "npm run build && ./scripts/build-deb.sh",
    "server": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "server:install": "cd server && npm install",
    "postinstall": "npm run server:install",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "clean": "rm -rf dist release node_modules/.cache",
    "clean:all": "rm -rf dist release node_modules server/node_modules"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zustand": "^5.0.0",
    "lucide-react": "^0.460.0",
    "date-fns": "^4.1.0",
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/user-event": "^14.5.2",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "jsdom": "^25.0.1",
    "typescript": "~5.6.0",
    "vite": "^6.0.0",
    "vitest": "^2.1.0",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "extends": "electron-builder.json"
  }
}
