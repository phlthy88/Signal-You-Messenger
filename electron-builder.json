{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.signalyou.messenger",
  "productName": "Signal You Messenger",
  "copyright": "Copyright (c) 2024 Signal You",
  "asar": true,
  "asarUnpack": [
    "server/**/*",
    "node_modules/better-sqlite3/**/*"
  ],
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "server/**/*",
    "!server/node_modules/.cache",
    "!server/data/**/*",
    "!server/uploads/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "dist",
      "to": "dist"
    },
    {
      "from": "server",
      "to": "server",
      "filter": [
        "**/*",
        "!node_modules/.cache",
        "!data/**/*",
        "!uploads/**/*"
      ]
    },
    {
      "from": "build/icons",
      "to": "icons"
    }
  ],
  "linux": {
    "target": [
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "flatpak",
        "arch": ["x64"]
      },
      {
        "target": "rpm",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "Network;InstantMessaging;Chat",
    "icon": "build/icons",
    "desktop": {
      "Name": "Signal You Messenger",
      "Comment": "Secure messaging with AI features",
      "Categories": "Network;InstantMessaging;Chat",
      "Keywords": "messenger;chat;signal;secure;encrypted;ai",
      "StartupWMClass": "signal-you-messenger"
    },
    "synopsis": "Secure messaging application with AI features",
    "description": "Signal You Messenger is a secure messaging application that combines end-to-end encryption with AI-powered features for a modern communication experience."
  },
  "deb": {
    "depends": [
      "libgtk-3-0",
      "libnotify4",
      "libnss3",
      "libxss1",
      "libxtst6",
      "xdg-utils",
      "libatspi2.0-0",
      "libuuid1",
      "libsecret-1-0"
    ],
    "recommends": [
      "libappindicator3-1"
    ],
    "priority": "optional",
    "section": "net",
    "afterInstall": "scripts/postinst.sh",
    "afterRemove": "scripts/postrm.sh"
  },
  "flatpak": {
    "runtime": "org.freedesktop.Platform",
    "runtimeVersion": "23.08",
    "sdk": "org.freedesktop.Sdk",
    "base": "org.electronjs.Electron2.BaseApp",
    "baseVersion": "23.08",
    "finishArgs": [
      "--share=ipc",
      "--socket=x11",
      "--socket=wayland",
      "--socket=pulseaudio",
      "--share=network",
      "--device=dri",
      "--filesystem=xdg-documents",
      "--filesystem=xdg-download",
      "--talk-name=org.freedesktop.Notifications",
      "--talk-name=org.kde.StatusNotifierWatcher",
      "--own-name=org.kde.*"
    ]
  },
  "rpm": {
    "depends": [
      "gtk3",
      "libnotify",
      "nss",
      "libXScrnSaver",
      "libXtst",
      "xdg-utils",
      "at-spi2-core",
      "libuuid",
      "libsecret"
    ]
  },
  "appImage": {
    "artifactName": "${productName}-${version}-${arch}.AppImage"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "category": "public.app-category.social-networking",
    "icon": "build/icons/icon.icns",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist"
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      },
      {
        "target": "portable",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icons/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  }
}
